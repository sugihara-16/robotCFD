propellerForces_A
{
    type          forces;
    libs          ("libforces.so");
    // writeControl  timeStep;
    // timeInterval  20;
    writeControl    adjustableRunTime;
    writeInterval   0.0001;
    log           yes;
    patches       ("propeller.*_A");
    rho           rhoInf;
    rhoInf        1.225;
    CofR          (0.19 0 -0.2);
    pitchAxis     (0 1 0);
}

